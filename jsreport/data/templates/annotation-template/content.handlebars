<html>

<head>
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
</head>

<body>
    <div style="display:flex;flex-direction:row;align-items:center">
        <img style="height:31px;line-height:31px;margin-right:8px" src="{#asset logo.png @encoding=dataURI}">
        <span style="font-size:16px;font-family:'Raleway', 'Hiragino Sans GB', sans-serif;text-transform:uppercase">
            Videx
        </span>
    </div>
    <h1>{{ name }}</h1>
    <ul class="list-group">
        {{#each annotations}}
        <li class="list-group-item" style="display:flex;flex-direction:row;justify-content:space-between;margin: 10px 0px;">
            <img style="width:360px;height:225px;" src="{{ image }}">
            <div class="{{color}}" style="margin-left:30px;">
                <div>
                   <strong>From</strong>  {{start}} <strong>To</strong> {{end}}
                </div>
                {{#if text}}
                    <br />
                    <div>
                        <strong>Note:</strong> {{text}}
                    </div>
                {{/if}}
                <br />
                {{#if transcript}}
                    <div>
                        <strong>Transcript:</strong> <i>{{transcript}}</i>
                    </div>
                {{/if}}
            </div>
        </li>
        {{/each}}
    </ul>
</body>

</html>