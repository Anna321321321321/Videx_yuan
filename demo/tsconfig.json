{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "build/",
    "jsx": "preserve",
    "allowJs": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "typeRoots": ["../node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
